{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "yarn build",
  "installCommand": "yarn install --frozen-lockfile --ignore-engines",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.bottie.ai"
        }
      ],
      "destination": "https://bottie.ai/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/weekly-summaries",
      "schedule": "0 9 * * 0"
    }
  ]
}